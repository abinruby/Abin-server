{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install"
  },
  "deploy": {
    "startCommand": "npm run server",
    "healthcheckPath": "http://localhost:5000",
    "healthcheckTimeout": 100,
    "restartPolicyType": "never"
  }
}
